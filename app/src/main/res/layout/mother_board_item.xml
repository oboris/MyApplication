<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/mb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:text="i7" />

    <TextView
        android:id="@+id/mb_chip_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/mb_name"
        android:layout_toRightOf="@+id/mb_name"
        android:gravity="end"
        android:textStyle="bold"
        android:textSize="30sp"
        tools:text="3500" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mb_pict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mb_name"
        android:orientation="horizontal"
        tools:listitem="@layout/mb_pict_item"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

</RelativeLayout>